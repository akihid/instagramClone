<!DOCTYPE html>
<html>
  <head>
    <title>ICloneApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
      <div class="header-left">
        <%= link_to image_tag('logo.png'), new_session_path ,class:"logo_image" %>
      </div>
      <div class="header-right">
      <ul>
        <% if logged_in? %>
          <li><%= link_to "投稿" , new_post_path ,class:"btn btn-primary btn-lg"%></li>
          <li><%= link_to 'お気に入り一覧' , favorites_path(user_id: current_user.id) , method: :get,class:"btn btn-default btn-lg"%>
          <li><%= link_to "マイページ" , user_path(current_user.id) ,class:"btn btn-default btn-lg"%></li>
          <li><%= link_to "ログアウト" , session_path(current_user.id) ,
          method: :delete ,data:{confirm:"ログアウトしますがよろしいですか？"},class:"btn btn-danger btn-lg"%></li>
        <% else %>
          <li><%= link_to 'ログイン' , new_session_path ,class:"btn btn-default btn-lg"%></li>
          <li><%= link_to '会員登録' , new_user_path ,class:"btn btn-primary btn-lg"%></li>
        <% end %>
      </ul>
      </div>
</header>

  <body>
  <div class="container">
    <%= render partial: 'layouts/flash_messages' %>
    <%= yield %>
  </div>
      <footer>
      <p>© 2015-2019 Copyright .</p>
    </footer>
  </body>

</html>
