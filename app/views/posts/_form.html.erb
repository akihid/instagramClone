<% if @post.errors.any? %>
  <div id="error_explantion">
  <h2><%= pluralize(@post.errors.count , '件' )%>のエラーがあります</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  </div>
<% end %>
<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6 text-left">
    <%= form_with(model: @post, local: true, url: chose_new_or_edit, class:"form-border") do |f|%>

      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content %>
      </div>

      <div class="form-group">
        <%= f.label :picture%><br>

        <%= image_tag(@post.picture.url) if @post.picture && @post.picture.url %>
        <%= f.file_field :picture%>
      </div>
        <%= f.hidden_field :picture_cache %>

      <div class="text-right">
        <%= f.submit '登録',class:"btn btn-default btn-xs"%>
        <%= link_to '一覧へ' , posts_path,class:"btn btn-default btn-xs"%>
      </div>

    <% end %>
  </div>
  <div class="col-md-3">
  </div>
</div>