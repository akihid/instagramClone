<% if @post.errors.any? %>
  <div id="error_explantion">
  <h2><%= pluralize(@post.errors.count , '件' )%>のエラーがあります</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_with(model: @post, local: true, url: chose_new_or_edit) do |f|%>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.label :picture%>

  <%= image_tag(@post.picture.url) if @post.picture && @post.picture.url %>
  <%= f.file_field :picture%>
  <%= f.hidden_field :picture_cache %>

  <%= f.submit '登録'%>
  <%= link_to '戻る' , posts_path%>

<% end %>