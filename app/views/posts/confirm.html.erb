<h1>確認画面</h1>
<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6 text-left">
    <%= form_with(model:@post , local: true ,url: posts_path, class:"form-border") do |f|%>

    <div class="form-group">
      <%= f.label :content %>
      <pre class="confirm-text-area"><%= @post.content %></pre>
    </div>
    <div class="form-group">
      <%= f.label :picture %>
      <p><%= image_tag(@post.picture.url) if @post.picture && @post.picture.url %></p>
    </div>
      <%= f.hidden_field :content %>
      <%= f.hidden_field :picture %>
      <%= f.hidden_field :picture_cache %>

    <div class="text-right">
      <%= f.submit '登録',class:"btn btn-default btn-xs"%>
      <p class="btn btn-default btn-xs" onclick="btnClick();">戻る</p>
    </div>
    <% end %>
  </div>
  <div class="col-md-3">
  </div>
</div>
<%= form_with(model:@post , local: true ,url: new_post_path ,method: 'get',class:"hidden_filed") do |f|%>

  <%= f.hidden_field :content %>
  <%= f.hidden_field :picture %>
  <%= f.hidden_field :picture_cache %>

  <%= f.submit '戻る' , name: 'back' ,id:"backBtn",class:"btn btn-default btn-xs"%>

<% end %>