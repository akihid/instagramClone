 <% if @profile.errors.any? %>
  <div id ="error_explantion">
  <p><%= pluralize(@profile.errors.count , "件") %>のエラーがあります。<p>
    <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model:@profile , local: true) do |f| %>

  <%= image_tag(@profile.picture.url) if @profile.picture && @profile.picture.url %>
  <%= f.label :picture %>
  <%= f.file_field :picture %>
  <%= f.hidden_field :picture_cache%>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.label :gender %>
  <label><%= f.radio_button :gender, true  %> 男 </label>
  <label><%= f.radio_button :gender, false %> 女 </label>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.submit '登録'%>
  <%= link_to '戻る', users_path%>

<% end %>
