<%= render partial: "error" %>

<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6 text-left">
    <%= form_with(model:@user , local: true , class:"form-border") do |f| %>

      <div class="form-group">
      <%= f.label :icon %><br>
      <%= image_tag(@user.icon.url,class:"mypage-icon") if @user.icon && @user.icon.url %>
      <%= f.file_field :icon %>
      <%= f.hidden_field :icon_cache%>
      </div>
      <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
      </div>

      <div class="form-group">
      <%= f.label :email %><br>
      <%= f.email_field :email %>
      </div>

      <div class="form-group">
      <%= f.label :content %><br>
      <%= f.text_area :content %>
      </div>

      <div class="form-group">
      <%= f.label :gender %><br>
      <label><%= f.radio_button :gender, true  %> 男 </label>
      <label><%= f.radio_button :gender, false %> 女 </label>
      </div>

      <div class="form-group">
      <%= f.label :age %><br>
      <%= f.text_field :age %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="text-right">
        <%= f.submit '更新',class:"btn btn-default btn-xs"%>
        <%= link_to '一覧へ', posts_path,class:"btn btn-default btn-xs"%>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">
  </div>
</div>